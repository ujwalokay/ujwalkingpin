{
  "$schema": "https://raw.githubusercontent.com/electron-builder/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.airavoto.gaming-pos",
  "productName": "Airavoto Gaming POS",
  "copyright": "Copyright 2024 Airavoto Gaming",
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "files": [
    "dist-electron/**/*",
    "dist/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "data",
      "to": "data",
      "filter": ["**/*"]
    }
  ],
  "npmRebuild": true,
  "buildDependenciesFromSource": true,
  "nodeGypRebuild": false,
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "build/icon.png",
    "artifactName": "${productName}-${version}-Setup.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Airavoto Gaming POS"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      }
    ],
    "icon": "build/icon.png",
    "category": "Office",
    "maintainer": "Airavoto Gaming",
    "artifactName": "${productName}-${version}.${ext}"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "build/icon.png",
    "category": "public.app-category.business",
    "artifactName": "${productName}-${version}.${ext}"
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "asar": true,
  "asarUnpack": [
    "**/*.node",
    "node_modules/better-sqlite3/**/*"
  ]
}
